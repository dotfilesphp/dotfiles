#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

$cwd = getcwd();
chdir(__DIR__.'/../');

use Toni\Dotfiles\Compiler;

try {
    $compiler = new Compiler();
    $compiler->compile();
    chmod('dotfiles.phar',0755);
}catch(\Exception $e){
    echo 'Failed to compile phar: ['.get_class($e).'] '.$e->getMessage().' at '.$e->getFile().':'.$e->getLine().PHP_EOL;
    exit(1);
}
