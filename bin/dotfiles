#!/usr/bin/env php
<?php

umask(0000);
require __DIR__.'/../vendor/autoload.php';
use Dotfiles\Core\ApplicationFactory;

try{
    $factory = new ApplicationFactory();
    $factory->createApplication();
    $app = $factory->getContainer()->get('dotfiles.app');
    exit($app->run());
}catch (\Exception $e){
    echo $e->getMessage()."\n";
    exit(1);
}
