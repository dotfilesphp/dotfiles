#!/usr/bin/env php
<?php

umask(0000);
require __DIR__.'/../vendor/autoload.php';
use Dotfiles\Core\ApplicationFactory;

try{
    $factory = new ApplicationFactory();
    $factory->createApplication();
    $container = $factory->getContainer();
    $app = $container->get('dotfiles.app');
    exit($app->run($container->get('dotfiles.input'),$container->get('dotfiles.output')));
}catch (\Exception $e){
    echo $e->getMessage()."\n";
    exit(1);
}
